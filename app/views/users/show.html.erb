<%= @user.name %>, <%= @user.email %>

<h3>この人が今呼んでる本</h3>
<% if !@goals.empty? %>
  <ul>
    <% @goals.each do |goal| %>
    <li>
      <%= Book.find(goal.book_id).title %>
      <%= goal.date %>
      <%= link_to "読み終わった", user_goal_path(goal), data: { "turbo-method": :delete,
        turbo_confirm: "You sure?" } %>
    </li>
  <% end %>
  </ul>
<% end %>